# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Primary file -- ".emacs", ".vimrc", etc.
GET /:username/:filename/*args                     controllers.com.grabrc.Application.getFile(username , filename, args)

# Fetch the Github repo. Defaults to a zip file
GET /:username/repo/                               controllers.com.grabrc.Application.getRepo(username, "zip")
GET /:username/repo/:type                          controllers.com.grabrc.Application.getRepo(username, type)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                              controllers.com.grabrc.Assets.at(path="/public", file)
